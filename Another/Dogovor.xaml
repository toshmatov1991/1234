<Window x:Class="CP.Another.Dogovor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Icon="icon.png" ResizeMode="CanMinimize"
        Title="Dogovor" Height="720" Width="1000">
    <Border Padding="7">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Договор купли-продажи квартиры" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="45" FontWeight="DemiBold"/>
            <TextBlock Text="   г. Томск" Grid.Row="1" HorizontalAlignment="Left" FontSize="30" VerticalAlignment="Top"/>
            <TextBlock Text="Дата" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="30"/>
            <TextBlock Text="Гражданин" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="30"/>
            <TextBlock x:Name="FIO" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="30"/>
            <TextBlock Text="Паспорт" Grid.Row="2" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="2,12,0,0"/>
            <TextBlock x:Name="passPort" Grid.ColumnSpan="3" Grid.Row="2" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="2,12,0,0"/>
            <TextBlock Text="Именуем в дальнейшем продавец, с одной стороны,
                       и гражданин" Grid.Row="2" VerticalAlignment="Bottom" FontSize="30" Grid.ColumnSpan="3"/>
        </Grid>
    </Border>
</Window>
